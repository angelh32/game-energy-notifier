<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Timer name"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/type_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description"
        card_view:layout_constraintStart_toStartOf="@+id/type_name"
        card_view:layout_constraintTop_toBottomOf="@+id/type_name" />

    <TextView
        android:id="@+id/description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tic"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/max_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="@string/max_value"
        card_view:layout_constraintEnd_toStartOf="@+id/description2"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/type_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="160"
        android:textSize="20dp"
        card_view:layout_constraintEnd_toEndOf="@+id/max_label"
        card_view:layout_constraintStart_toStartOf="@+id/max_label"
        card_view:layout_constraintTop_toBottomOf="@+id/max_label" />

    <TextView
        android:id="@+id/type_tic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="00:00:00"
        android:textSize="20dp"
        card_view:layout_constraintEnd_toEndOf="@+id/description2"
        card_view:layout_constraintStart_toStartOf="@+id/description2"
        card_view:layout_constraintTop_toBottomOf="@+id/description2" />

</androidx.constraintlayout.widget.ConstraintLayout>